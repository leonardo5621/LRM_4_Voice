<Register>:
    BoxLayout:
        canvas.before:
            Rectangle:
                pos:self.pos
                size:self.size
                source:'wave.png'
        orientation:'vertical'
        ActionBar:
            background_image:'blank.png'
            background_color:0,0,0.6,0.7
            ActionView:
                ActionPrevious:
                    on_release:app.root.current='menu'
                ActionButton:
                    text:'Sair'
                    on_release:app.stop()

        BoxLayout:
            id:boxreg
            orientation:'vertical'
            padding:100
            spacing:50
            Label:
                size_hint_y:None
                #color:0.1,0.1,0.1,1
                height:60
                text:'Insira seus Dados Abaixo'
                font_size:30
                #canvas.before:
                 #   Color:
                  #      rgba: 1,1,1, 1
                   # Rectangle:
                    #    pos: self.pos
                     #    size: self.size
            BoxLayout:
                size_hint_y:None
                size:self.width,30
                orientation:'horizontal'
                Label:
                    text:'Nome'
                    font_size:20
                TextInput:
                    text:''
                    multiline:False
            BoxLayout:
                size_hint_y:None
                size:self.width,30
                orientation:'horizontal'
                Label:
                    text:'Email'
                    font_size:20
                TextInput:
                    text:''
                    multiline:False
            BoxLayout:
                size_hint_y:None
                size:self.width,30
                orientation:'horizontal'
                Label:
                    text:'Telefone'
                    font_size:20
                TextInput:
                    text:''
                    multiline:False
            
